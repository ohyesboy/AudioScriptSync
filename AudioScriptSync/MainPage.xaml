<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Shell.NavBarIsVisible="False"
             xmlns:local="clr-namespace:AudioScriptSync"
             x:DataType="local:MainPageModel"
             x:Class="AudioScriptSync.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">
            <Grid RowDefinitions="auto,auto,*"
                  ColumnDefinitions="200,*">
                <Label Grid.Row="0" Grid.Column="0"  Text="Audio file:" />
                <Label Grid.Row="0" Grid.Column="1"  Text="{Binding AudioFile}" />
                <Label Grid.Row="1" Grid.Column="0"  Text="Script file:" />
                <Label Grid.Row="1" Grid.Column="1"  Text="{Binding ScriptFile}" />
                
                <HorizontalStackLayout Grid.Row="2">
                    <Button Text="Play" Clicked="Button_Clicked"/>
                    <Button Text="Open Script" Clicked="OpenScript" />
                </HorizontalStackLayout>
            </Grid>


        </VerticalStackLayout>
    </ScrollView>

</ContentPage>

